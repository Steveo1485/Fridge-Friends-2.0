<div id="password-create" data-role="page" class="password-new">
  <% if flash %>
  <div id="flash-box">
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
  </div>
  <% end %>
  <div data-role="content">
    <div id="clearance">
      <p><%= t '.description' %></p>
    </div>
  </div>
</div>