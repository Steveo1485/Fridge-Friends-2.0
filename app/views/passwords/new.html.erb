<div id="password-new" data-role="page" class="password-new">
  <% if flash %>
  <div id="flash-box">
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
  </div>
  <% end %>
  <div data-role="content">
<div id="ff-header-block">
      <span id="ff-logo-underline"></span>
      <h1>Fridge Friend</h1>
      <span id="ff-logo-fridge-med"></span>
    </div>
    <div class="ff-tagline-block">Eat.&nbsp;&nbsp;Drink.&nbsp;&nbsp;Be Social.</div>


   <div id='clearance'>
    <h2><%= t '.title' %></h2>

    <p><%= t '.description' %></p>

    <%= form_for :password, :url => passwords_path, html: { class: "login" } do |form| %>
    <div class='text-field'>
      <%= form.label :email %>
      <%= form.text_field :email, :type => 'email', placeholder: 'HungryMonster@example.com' %>
    </div>

    <div class='submit-field'>
      <%= form.submit %>
    </div>
    <% end %>
  </div>
</div>
</div>
